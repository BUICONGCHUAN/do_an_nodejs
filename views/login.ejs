<%- include('./layouts/header.ejs') %>
<link rel="stylesheet" href="/views/styles/login.css">
    <div class="container mb-5 mt-5 d-flex flex-md-column align-items-center">


        <form action="" method="POST">
            <h1 class="fs-3 m-md-4">Đăng nhập</h1>

            <%
                if(typeof message !== 'undefined'){
                    %>
                    <p style="color: red;"><%= message %></p>
                    <%
                } 
            %> 
            <div class="row">
                <div class="col-sm-12">
                    <input type="email" name="email" placeholder="Nhập Email" required>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-12">
                    <input type="password" name="password" placeholder="Nhập mật khẩu" required>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-sm-12">
                    <input type="submit" value="Đăng nhập" class="btn btn-info">
                    <a href="/forget-password">Quên mật khẩu</a>

                </div>
            </div>
        </form>


    </div>

<%- include('./layouts/footer.ejs') %>